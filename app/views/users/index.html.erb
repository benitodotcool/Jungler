<div class="main-wrapper" id="users-focus">

    <div class="main-head">
        <h1 class="title">Swipe</h1>
    </div>

    <div class="main-content-swipe">

        <div class="swipe-card-container">

            <%if @user_select == false %>

                <div class="no-user-select inset" data-tilt>
                    <div class="title">Plus aucun utilisateurs ne correspond à tes réglages</div>
                    <p>Nous t'invitons à revoir tes filtres en bas de page.</p>
                    <div class="img">
                        <%= image_tag 'varus.png'%>   
                    </div>
                </div>

            <%else%>

            <%= render "swipe_user_card" %>   

            <%end%>

            <ul class="btn-color-wrapper">
                <li class="color peer-gaming" id="peer-gaming-btn">
                    <%= form_with(url: user_path(current_user.id), method: "patch", remote: true) do |form|%>
                        <%= form.hidden_field :tag_list, value: "Peer-Gaming" %>
                        <%= form.submit "Peer-Gaming",  class:"input-send-swipe" %>
                    <% end %>
                </li>
                <li class="color relax" id="relax-btn">
                    <%= form_with(url: user_path(current_user.id), method: "patch", remote: true) do |form|%>
                        <%= form.hidden_field :tag_list, value: "Relax"%>
                        <%= form.submit "Relax",  class:"input-send-swipe" %>
                    <% end %>
                </li>
                <li class="color tryhard" id="tryhard-btn">
                    <%= form_with(url: user_path(current_user.id), method: "patch", remote: true) do |form|%>
                        <%= form.hidden_field :tag_list, value: "Try-Hard"%>
                        <%= form.submit "Try-Hard",  class:"input-send-swipe" %>
                    <% end %>
                </li>               
                
            </ul>

        </div>

    </div>

</div>