<div class="main-content-edit-profile">

    <div class="form-grid">
    
        <div class="form-content">

            <%= form_with(model: user, local: true) do |form| %>

                <div class="container-devise">

                    <div class="devise-field">
                        <div class="title">
                            <%= form.label :Nom_dinvocateur %>
                        </div>                        
                        <%= form.text_field :summoner_name, autofocus: true, class:"input inset" %>
                    </div>

                    <div class="devise-field">
                        <div class="title">
                            <%= form.label :Mon_style_de_jeu %>
                        </div>                        
                        <%= form.select :tag_list, ["Relax", "Peer-Gaming", "Try-Hard"]%>
                    </div>

                    <%begin%>
                    <%= form.hidden_field :user_game_stat_id, value: @user_game_stat.id %>
                    <%rescue%>      
                    <%end%>

                    <%= render 'user_game_stats/form', user_game_stat: @user_game_stat%>

                <!-- </div> of container-devise ending in render 'user_game_stats/form' -->

                <% if user.errors.any? %>

                    <%= pluralize(@user.errors.count, "error") %> interdit à cet utilisateur d'être enregistré:
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>

                <% end %>   

            <% end %>

        </div>

    </div>

</div>




         
        
  
      






 





 






  
