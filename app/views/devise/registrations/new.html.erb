<div class="main-wrapper" id="landing_page-focus">

    <div class="main-head">
        <h1 class="title">Inscription</h1>
    </div>
    
    <div class="main-content-edit-profile">

        <div class="form-grid">
        
            <div class="form-content">
            
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                    <div class="container-devise">

                        <div class="devise-field">
                            <div class="title">
                                <%= f.label :Email %>
                            </div>                        
                            <%= f.email_field :email, autocomplete: "email", autofocus: true, class:"input inset" %>
                        </div>

                        <div class="devise-field">
                            <div class="title">
                                <%= f.label :Mot_de_passe %>
                            </div>                        
                            <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} caractères minimum", class:"input inset" %>
                        </div>

                        <div class="devise-field">
                            <div class="title">
                                <%= f.label :Confirmation %>
                            </div>                        
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "#{@minimum_password_length} caractères minimum", class:"input inset" %>
                        </div>                    
                    
                    </div>

                    <%= f.submit "S'inscrire", class:"input-send" %>  

                    <%= render "devise/shared/error_messages", resource: resource %>                  

                <% end %>
            
            </div>

            <div class="form-cta-bottom">
                <%= render "devise/shared/links" %>
            </div>

        </div>    
    
    </div>

</div>