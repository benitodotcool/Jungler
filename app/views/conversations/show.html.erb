            </div>

            <div class="conversation-right">

                <div class="conversation-head">  
                            
                    <h3 class="conversation-title">nom de l'interlocuteur</h3>
            
                    <ul>
                        <li class="icon"><h3>A</h3></li>
                        <li class="icon"><h3>B</h3></li>
                        <li class="icon"><h3>C</h3></li>
                    </ul>
                </div>

                <div class="conversation-content">
                    
                    <p class="conversation-date"><%=@current_conversation.created_at.strftime( "%d/%m/%Y %H:%M")%></p>
                    <% @messages.sort.each do |message| %>  
                    <% if message.user_id == current_user.id %>
                    <div class="message message-send"><%=message.content%></div>
                    <% else %>
                    <div class="message message-received"><%=message.content%></div>
                    <%end%>
                    <%end%>

                </div>
                
                <%=render "messages/form"%>

            </div>
        
        </div>

    </div>

</main>

