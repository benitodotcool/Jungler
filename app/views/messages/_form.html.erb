<%= form_with url: message, local: true) do |form| %>

<div class="field"> 
    <%= form.label :message%>
     
    <%= form.text_field :content%>
  </div>
  <div class="field"> 
    <%= form.hidden_field :user_id, value:current_user_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
