<div class="form-container">
<div class="title-container">
<h2>Connexion</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
    <p><%= f.label :email %><br /></p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"login-field" %>
  </div>

  <div class="login-field">
    <%= f.label :password, class: "input-text" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"login-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Connexion", class: "input-send" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
